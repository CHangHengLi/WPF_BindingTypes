<Window
    x:Class="BindingTypesDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BindingTypesDemo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:BindingTypesDemo.ViewModels"
    Title="WPF绑定资源类型演示"
    Width="900"
    Height="600"
    Background="{DynamicResource BackgroundBrush}"
    mc:Ignorable="d">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  顶部操作栏  -->
        <Grid Grid.Row="0" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  标题  -->
            <TextBlock Style="{StaticResource HeaderTextBlockStyle}" Text="WPF绑定资源类型演示" />

            <!--  按钮区域  -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button
                    Margin="0,0,10,0"
                    Command="{Binding ToggleThemeCommand}"
                    Content="{Binding ThemeColorName}"
                    Style="{StaticResource RoundButtonStyle}" />

                <ToggleButton
                    Content="高级视图"
                    IsChecked="{Binding IsAdvancedViewEnabled}"
                    Style="{StaticResource RoundToggleButtonStyle}" />
            </StackPanel>
        </Grid>

        <!--  主内容区域  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  左侧用户列表面板  -->
            <Border
                Padding="15"
                Background="White"
                CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  列表标题  -->
                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,10"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{DynamicResource PrimaryBrush}"
                        Text="用户列表" />

                    <!--  搜索框 - ElementName绑定示例  -->
                    <Grid Grid.Row="1" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  搜索框  -->
                        <TextBox
                            Name="searchBox"
                            Padding="8"
                            BorderThickness="1"
                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

                        <!--  显示搜索框字符数 - 使用ElementName绑定  -->
                        <TextBlock
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="#7f8c8d">
                            <TextBlock.Text>
                                <Binding
                                    ElementName="searchBox"
                                    Path="Text.Length"
                                    StringFormat="{}{0}字" />
                            </TextBlock.Text>
                        </TextBlock>
                    </Grid>

                    <!--  用户列表  -->
                    <ListBox
                        Name="userList"
                        Grid.Row="2"
                        Background="Transparent"
                        BorderThickness="0"
                        ItemTemplate="{StaticResource UserItemTemplate}"
                        ItemsSource="{Binding UserViewModels}"
                        SelectedItem="{Binding SelectedUser}" />

                    <!--  操作按钮  -->
                    <StackPanel
                        Grid.Row="3"
                        Margin="0,10,0,0"
                        Orientation="Horizontal">
                        <Button
                            Width="100"
                            Margin="0,0,10,0"
                            Command="{Binding AddUserCommand}"
                            Content="添加用户"
                            Style="{StaticResource RoundButtonStyle}" />

                        <Button
                            Width="100"
                            Command="{Binding RemoveUserCommand}"
                            Content="删除用户"
                            Style="{StaticResource RoundButtonStyle}" />
                    </StackPanel>
                </Grid>
            </Border>

            <!--  右侧用户详情面板  -->
            <Border
                Grid.Column="1"
                Margin="15,0,0,0"
                Padding="20"
                Background="White"
                CornerRadius="10">
                <Grid>
                    <!--  当没有选中用户时显示提示  -->
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Foreground="#95a5a6"
                        Text="请在左侧列表中选择一个用户"
                        Visibility="{Binding SelectedUser, Converter={StaticResource NullToVisibilityConverter}}" />

                    <!--  用户详情表单  -->
                    <Grid Visibility="{Binding SelectedUser, Converter={StaticResource NotNullToVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  详情标题  -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock
                                FontSize="18"
                                FontWeight="Bold"
                                Foreground="{DynamicResource PrimaryBrush}"
                                Text="用户详情" />

                            <!--  使用高级视图切换  -->
                            <TextBlock
                                Margin="5,0,0,0"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="{DynamicResource AccentBrush}"
                                Text=" (高级视图)"
                                Visibility="{Binding IsAdvancedViewEnabled, Converter={StaticResource BoolToVisibilityConverter}}" />
                        </StackPanel>

                        <!--  详情表单  -->
                        <ScrollViewer
                            Grid.Row="1"
                            Margin="0,10,0,0"
                            VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!--  基本信息  -->
                                <GroupBox Margin="0,0,0,15" Header="基本信息">
                                    <StackPanel Margin="5">
                                        <!--  姓名输入  -->
                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Text="姓名:" />
                                            <TextBox
                                                Name="nameTextBox"
                                                Grid.Column="1"
                                                Padding="5"
                                                Text="{Binding SelectedUser.Name, UpdateSourceTrigger=PropertyChanged}" />
                                        </Grid>

                                        <!--  邮箱输入  -->
                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Text="邮箱:" />
                                            <TextBox
                                                Grid.Column="1"
                                                Padding="5"
                                                Text="{Binding SelectedUser.Email, UpdateSourceTrigger=PropertyChanged}" />
                                        </Grid>

                                        <!--  年龄输入 - 使用Slider双向绑定示例  -->
                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Text="年龄:" />
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <Slider
                                                    Width="150"
                                                    VerticalAlignment="Center"
                                                    Maximum="100"
                                                    Minimum="0"
                                                    Value="{Binding SelectedUser.Age}" />
                                                <TextBox
                                                    Width="50"
                                                    Margin="10,0,0,0"
                                                    Padding="5"
                                                    Text="{Binding SelectedUser.Age, UpdateSourceTrigger=PropertyChanged}" />
                                            </StackPanel>
                                        </Grid>

                                        <!--  头像颜色选择  -->
                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Text="头像颜色:" />
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <!--  颜色预览  -->
                                                <Border
                                                    Width="30"
                                                    Height="30"
                                                    Margin="0,0,10,0"
                                                    Background="{Binding SelectedUser.AvatarColor}"
                                                    CornerRadius="15" />
                                                <ComboBox
                                                    Width="150"
                                                    SelectedValue="{Binding SelectedUser.AvatarColor}"
                                                    SelectedValuePath="Tag">
                                                    <ComboBoxItem Content="蓝色" Tag="#3498db">
                                                        <ComboBoxItem.Background>
                                                            <SolidColorBrush Color="#3498db" />
                                                        </ComboBoxItem.Background>
                                                    </ComboBoxItem>
                                                    <ComboBoxItem Content="红色" Tag="#e74c3c">
                                                        <ComboBoxItem.Background>
                                                            <SolidColorBrush Color="#e74c3c" />
                                                        </ComboBoxItem.Background>
                                                    </ComboBoxItem>
                                                    <ComboBoxItem Content="绿色" Tag="#2ecc71">
                                                        <ComboBoxItem.Background>
                                                            <SolidColorBrush Color="#2ecc71" />
                                                        </ComboBoxItem.Background>
                                                    </ComboBoxItem>
                                                    <ComboBoxItem Content="紫色" Tag="#9b59b6">
                                                        <ComboBoxItem.Background>
                                                            <SolidColorBrush Color="#9b59b6" />
                                                        </ComboBoxItem.Background>
                                                    </ComboBoxItem>
                                                    <ComboBoxItem Content="橙色" Tag="#f39c12">
                                                        <ComboBoxItem.Background>
                                                            <SolidColorBrush Color="#f39c12" />
                                                        </ComboBoxItem.Background>
                                                    </ComboBoxItem>
                                                </ComboBox>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </GroupBox>

                                <!--  高级信息区域 - 使用绑定的Visibility  -->
                                <GroupBox Header="高级信息" Visibility="{Binding IsAdvancedViewEnabled, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <StackPanel Margin="5">
                                        <!--  使用RelativeSource FindAncestor绑定示例  -->
                                        <Border
                                            Margin="0,5"
                                            Padding="10"
                                            BorderBrush="{Binding Background, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type GroupBox}}}"
                                            BorderThickness="1">
                                            <StackPanel>
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    FontWeight="Bold"
                                                    Text="使用相对源绑定示例" />
                                                <TextBlock>
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="当前窗口尺寸: {0:F0}x{1:F0}">
                                                            <Binding Path="ActualWidth" RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}" />
                                                            <Binding Path="ActualHeight" RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type Window}}" />
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>

                                                <TextBlock Margin="0,5,0,0">
                                                    <TextBlock.Text>
                                                        <Binding
                                                            ElementName="userList"
                                                            Path="Items.Count"
                                                            StringFormat="用户列表中有 {0} 个用户" />
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>

                                        <!--  使用TemplatedParent绑定的自定义控件示例  -->
                                        <TextBlock
                                            Margin="0,10,0,5"
                                            FontWeight="Bold"
                                            Text="自定义控件模板示例 (TemplatedParent)" />
                                        <StackPanel>
                                            <TextBlock
                                                Margin="0,0,0,10"
                                                FontStyle="Italic"
                                                Text="以下按钮使用 TemplatedParent 绑定，将模板内部元素与按钮本身的属性绑定起来。"
                                                TextWrapping="Wrap" />

                                            <Button
                                                MinHeight="50"
                                                Margin="0,5,0,15"
                                                local:ButtonExtensions.Description="这个描述通过TemplatedParent绑定到按钮模板中"
                                                Content="这是一个使用TemplatedParent的按钮"
                                                Style="{StaticResource TemplatedParentDemoButtonStyle}" />

                                            <Grid Margin="0,0,0,10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <!--  两个不同内容但使用相同模板的按钮  -->
                                                <Button
                                                    Grid.Column="0"
                                                    MinHeight="50"
                                                    Margin="0,5,5,5"
                                                    local:ButtonExtensions.Description="按钮A的描述"
                                                    Content="按钮A"
                                                    Style="{StaticResource TemplatedParentDemoButtonStyle}" />

                                                <Button
                                                    Grid.Column="1"
                                                    MinHeight="50"
                                                    Margin="5,5,0,5"
                                                    local:ButtonExtensions.Description="按钮B的描述"
                                                    Content="按钮B"
                                                    Style="{StaticResource TemplatedParentDemoButtonStyle}" />
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </ScrollViewer>

                        <!--  底部状态栏  -->
                        <Border
                            Grid.Row="2"
                            Margin="0,10,0,0"
                            Padding="0,10,0,0"
                            BorderBrush="#ddd"
                            BorderThickness="0,1,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  使用Self绑定示例  -->
                                <Button
                                    Grid.Column="1"
                                    Width="100"
                                    Height="{Binding Width, RelativeSource={RelativeSource Self}}"
                                    Content="保存更改"
                                    Style="{StaticResource RoundButtonStyle}" />
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
